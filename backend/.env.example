# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/tropical

# Server Port
PORT=5000

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Storage Configuration
# Set to 'local' for development, 'cloudinary' for production
STORAGE_TYPE=local

# Local Upload Directory (optional, defaults to backend/uploads)
# UPLOADS_DIR=/data/uploads

# Cloudinary Configuration (for persistent image storage)
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# JWT Secret (for authentication)
JWT_SECRET=your-secret-key-change-in-production

# ============================================
# EMAIL CONFIGURATION
# ============================================

# Option 1: Resend (RECOMMENDED - HTTP API, works on all platforms)
# Sign up at https://resend.com and get your API key
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=noreply@thetropical.in

# Admin email (where contact forms and notifications are sent)
ADMIN_EMAIL=admin@thetropical.in

# Option 2: SMTP (FALLBACK - Not recommended for cloud platforms like Render)
# Only use if Resend is not available
# SMTP_HOST=smtp-relay.brevo.com
# SMTP_PORT=587
# SMTP_EMAIL=your-email@gmail.com
# SMTP_PASSWORD=your-smtp-password-or-api-key
